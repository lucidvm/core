{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["ES2021", "dom"],
        "target": "es2021",
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "dist/",
        "checkJs": true,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "src/**/*.tsx",
        "src/**/*.jsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}